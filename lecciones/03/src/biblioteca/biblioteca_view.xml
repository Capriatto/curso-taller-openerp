<?xml version="1.0"?>
<openerp>
<data>
    <!--
    =================================================================
    Vista tipo lista para biblioteca.libro
    =================================================================
    -->
    <record model="ir.ui.view" id="libro_tree">
        <field name="name">biblioteca.libro.tree</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <tree>
                <field name="isbn"/>
                <field name="name"/>
                <field name="nombre_autor"/>
                <field name="paginas"/>
            </tree>
        </field>
    </record>
    <!--
    =================================================================
    Vista tipo formulario para biblioteca.libro
    =================================================================
    -->
    <record model="ir.ui.view" id="libro_form">
        <field name="name">biblioteca.libro.form</field>
        <field name="model">biblioteca.libro</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <field name="name" placeholder="Título del libro"/>
                    <group string="Estado">
                        <field name="active"/>
                        <field name="state"/>
                    </group>
                    <notebook>
                        <page string="Detalles">
                            <group>
                                <field name="isbn"/>
                                <field name="nombre_autor"/>
                                <field name="descripcion"/>
                                <newline />
                                <field name="paginas"/>
                            </group>
                        </page>
                        <page string="Fechas">
                            <group>
                                <label string="Fechas importantes en la gestión del libro"/>
                                <field name="fecha_compra"/>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <!--
    =================================================================
    Acción para biblioteca.libro
    =================================================================
    -->
    <record model="ir.actions.act_window" id="libro_action">
        <field name="name">Catálogo de Libros</field>
        <field name="res_model">biblioteca.libro</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>
    <!--
    =================================================================
    Menú para biblioteca.libro
    =================================================================
    -->
    <menuitem id="biblioteca_root_menu" name="Biblioteca"/>
    <menuitem id="biblioteca_menu" name="Biblioteca" parent="menu_biblioteca_nav"/>
    <menuitem id="biblioteca_libro_menu" parent="biblioteca_menu" name="Libro" action="libro_action"/>
</data>
</openerp>
